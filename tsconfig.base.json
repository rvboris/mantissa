{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "noLib": false,
    "strict": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "inlineSourceMap": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
