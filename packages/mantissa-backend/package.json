{
  "name": "@mantissa/backend",
  "version": "1.0.0",
  "description": "@mantissa/backend",
  "license": "MIT",
  "repository": "",
  "author": {
    "name": "Boris Ryabov",
    "email": "rv.boris@gmail.com"
  },
  "keywords": [
    "backend"
  ],
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist && rimraf coverage",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:prod": "node dist/main.js",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:hmr": "node dist/server",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "test": "jest",
    "coverage": "jest --coverage",
    "watch:test": "jest --watch",
    "e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@mantissa/auth": "*",
    "@mantissa/env": "*",
    "@mantissa/error-codes": "*",
    "@mantissa/locale": "*",
    "@mantissa/gql-types": "*",
    "@mantissa/shared-types": "*",
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/graphql": "^5.5.1",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/microservices": "^5.6.2",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/testing": "^5.6.2",
    "@nestjs/typeorm": "^5.2.2",
    "@nestjs/websockets": "^5.6.2",
    "@types/big.js": "^4.0.5",
    "@types/node": "^10.12.18",
    "@types/winston": "^2.4.4",
    "apollo-server": "^2.3.1",
    "apollo-server-express": "^2.3.1",
    "big.js": "^5.2.2",
    "class-transformer": "^0.2.0",
    "class-transformer-validator": "^0.6.0",
    "class-validator": "^0.9.1",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "lodash": "^4.17.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.12",
    "typescript": "^3.2.4",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.13",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.1",
    "pretty-exceptions": "^1.4.0",
    "rimraf": "^2.6.3",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "transform": {
      ".(ts)": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
